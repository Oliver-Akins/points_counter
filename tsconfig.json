{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "typings"
    ]
}